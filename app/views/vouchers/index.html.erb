<%- model_class = Voucher -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:from_name) %></th>
      <th><%= model_class.human_attribute_name(:to_name) %></th>
      <th><%= model_class.human_attribute_name(:from_email) %></th>
      <th><%= model_class.human_attribute_name(:to_email) %></th>
      <th><%= model_class.human_attribute_name(:expires_on) %></th>
      <th><%= model_class.human_attribute_name(:passcode) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @vouchers.each do |voucher| %>
      <tr>
        <td><%= link_to voucher.id, voucher_path(voucher) %></td>
        <td><%= voucher.title %></td>
        <td><%= voucher.description %></td>
        <td><%= voucher.from_name %></td>
        <td><%= voucher.to_name %></td>
        <td><%= voucher.from_email %></td>
        <td><%= voucher.to_email %></td>
        <td><%= voucher.expires_on %></td>
        <td><%= voucher.passcode %></td>
        <td><%=l voucher.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_voucher_path(voucher), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      voucher_path(voucher),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_voucher_path,
            :class => 'btn btn-primary' %>
